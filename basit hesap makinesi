#include <stdio.h>
#include <stdlib.h>

int main()
{
    float sayi1,sayi2;
    char islem;
    printf("HESAP MAKINESI\n");
    printf("-----------------\n");
    printf("Enter [Sayi 1] ");
    printf("Islem [+ - * /] ");
    printf("[Sayi 2]\n");
    scanf("%f%c%f", &sayi1, &islem, &sayi2);
    switch(islem){
      case '+':
        printf("%f + %f = %f", sayi1, sayi2, sayi1+sayi2);
        break;
      case '-':
        printf("%f - %f = %f", sayi1, sayi2, sayi1-sayi2);
        break;
      case '*':
        printf("%f * %f = %f", sayi1, sayi2, sayi1*sayi2);
        break;
      case '/':
        if(sayi2==0){
            printf("Bolme isleminde, bir sayinin 0'a bolumu tanimsizdir.");
        }else{
            printf("%f / %f = %f", sayi1, sayi2, sayi1/sayi2);
        }
        break;
        }

    return 0;
}
