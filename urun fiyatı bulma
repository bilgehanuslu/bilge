#include <stdio.h>
#include <stdlib.h>

int main()
{
    float fiyat;
    printf("Urun fiyatini giriniz: ");
    scanf("%f", &fiyat);
    if(0<fiyat && fiyat<100){
        printf("Urunun indirimli fiyati: %f", fiyat-(fiyat*0.1));
    }else if(100<=fiyat && fiyat<500){
        printf("Urunun indirimli fiyati: %f", fiyat-(fiyat*0.15));
    }else if(500<=fiyat){
        printf("Urunun indirimli fiyati: %f", fiyat-(fiyat*0.25));
    }
    return 0;
}
