int n;
    int dig, sum,pro;
     
    printf("Enter an integer number :");
    scanf("%d",&n);
  
    sum=0;
    pro=1;
     
    while(n>0)
    {
        dig=n%10;
        sum+=dig;
        pro*=dig;
        n=n/10;
    }
     
    printf("Sum of all Digits is : %d\n",sum);
    printf("Product of all digits: %d\n",pro);
