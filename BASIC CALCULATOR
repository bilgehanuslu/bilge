#include <stdio.h>
#include <stdlib.h>

int main()
{
    float num1,num2;
    char op;
    printf("CALCULATOR\n");
    printf("-----------------\n");
    printf("Enter [Num 1] ");
    printf("Operation [+ - * /] ");
    printf("[Num 2]\n");
    scanf("%f%c%f", &num1, &op, &num2);
    switch(op){
      case '+':
        printf("%f + %f = %f", num1, num2, num1+num2);
        break;
      case '-':
        printf("%f - %f = %f", num1, num2, num1-num2);
        break;
      case '*':
        printf("%f * %f = %f", num1, num2, num1*num2);
        break;
      case '/':
        if(sayi2==0){
            printf("You can't enter 0 for num2.");
        }else{
            printf("%f / %f = %f", num1, num2, num1/num2);
        }
        break;
        }

